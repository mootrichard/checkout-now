{
  "functions": {
    "predeploy": [
      "npm --prefix $RESOURCE_DIR run lint"
    ],
    "source": "functions"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/authorize",
        "function": "authorize"
      },
      {
        "source": "/callback",
        "function": "callback"
      },
      {
        "source": "/catalog",
        "function": "catalog"
      },
      {
        "source": "/checkout/*/*",
        "function": "checkout"
      }
    ]
  }
}
